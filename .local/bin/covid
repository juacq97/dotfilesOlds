#! /bin/sh

getVacunas=$(curl -sX GET "https://disease.sh/v3/covid-19/vaccine/coverage/countries/mexico?lastdays=1&fullData=false" -H  "accept: application/json" | jq '.timeline' | head -2 | tail -1 | cut -d':' -f 2)

getCasos=$(curl -sX GET "https://disease.sh/v3/covid-19/countries/mexico" -H "accept: application/json" | jq '.active')

getRecuperados=$(curl -sX GET "https://disease.sh/v3/covid-19/countries/mexico" -H "accept: application/json" | jq '.recovered')

echo "󱎶: $getCasos"
echo "󰎑:$getVacunas"
echo "󰢙: $getRecuperados"

