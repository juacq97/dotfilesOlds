#!/bin/sh

var=$(echo -e "Apagar\nSuspender\nReiniciar\nSalir\nCancelar" | dmenu -i -h 27 -p "Â¿Desea salir?") 

case $var in
    'Apagar') 
#       rm /tmp/bspwm-startup.lock
	systemctl poweroff;;
#	sudo poweroff;;
	
    'Suspender')
    systemctl suspend;;
#	sudo zzz;;

    'Reiniciar')
#	rm /tmp/bspwm-startup.lock
	systemctl reboot;;
#	sudo reboot;;

    'Salir')
#	rm /tmp/bspwm-startup.lock
#	bspc quit;;
#	pkill xinit;;
	pkill herbstluftwm;;
    
	'Cancelar')
	    exit 0;;
esac
