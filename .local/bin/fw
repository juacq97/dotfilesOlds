#! /bin/sh

cd ~/storage/shared/Android/media/com.nextcloud.client/nextcloud/admin@cloud.juancastro.xyz/

getFile=$(fzf --preview='less {}' --bind shift-up:preview-page-up,shift-down:preview-page-down")
type=$(xdg-mime query filetype $getFile | cut -d "/" -f1)

case $type in
    text)
	filename=$(basename -- "$getFile")
	getExt="${filename##*.}"
	    case $getExt in
	     sc) sc-im $getFile;;
	     md) glow $getFile;;
	     *) nvim $getFile;;
	    esac
	
	;;
    
    inode) cd $getFile;;
    *) termux-open $getFile;;
esac


