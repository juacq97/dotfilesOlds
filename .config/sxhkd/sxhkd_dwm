#Screenshots
Print
	flameshot gui
super + shift + Print	
      flameshot gui -d 2000
super + Print	
      flameshot full -c

#Audio
XF86AudioMute
	pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle ; sigdwmblocks 4
XF86AudioLowerVolume
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -2% ; sigdwmblocks 4
XF86AudioRaiseVolume
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +2% ; sigdwmblocks 4


XF86AudioPlay
	playerctl play-pause 
XF86AudioNext
	playerctl next 
XF86AudioPrev
	playerctl previous 
XF86AudioStop
	playerctl stop 
XF86AudioMicMute
      #pactl set-source-mute 1 toggle; sigdwmblocks 7
      pactl set-source-mute 1 toggle; polybar-msg hook mic-volume 1

super + alt + m
      #pactl set-source-mute 1 toggle; sigdwmblocks 7
      pactl set-source-mute 1 toggle; polybar-msg hook mic-volume 1

# Subir brillo
XF86MonBrightnessUp
	brightnessctl set +5% 

# Bajar brillo
XF86MonBrightnessDown
	brightnessctl set 5%- 


# Reiniciar sxhdk 
super + shift + r
      pkill -USR1 -x sxhkd



