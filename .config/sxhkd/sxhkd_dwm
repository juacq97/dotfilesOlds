super + shift + i
    dmenuunicode

super + a
      emacsclient -c -F '(quote (name . "agenda") (width  . 80) (height . 45) (left . 250) (top . 60))' -n -e "(agenda-frame)"

super + F7
    toggle-colorscheme

#Terminal
super + Return
#      st 
#	emacsclient -c -F '(quote (name . "eshell"))' -e "(eshell)"
	emacsclient -ca ""
	
super + control + Return
    alacritty

super + shift + Return
	emacsclient -c -F '(quote (name . "eshell"))' -e "(eshell)"


